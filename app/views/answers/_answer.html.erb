<article class="answer" id=<%= "answer_#{answer.id}" %>>
    <div>
      <span class="answer_rating" style="font-size: 20px;"><%= answer.rating %></span>
      <% if answer.question.best_answer == answer %>
        <%= image_tag('star-solid.svg', size: 15, style: 'width:20px') %>
      <% else %>
        <%= link_to_if(answer.question.author == current_user, image_tag('star-regular.svg', size: 15, style: 'width:20px;  margin-right: 10px'), best_question_path(answer.question, answer_id: answer.id), method: :put) %>
      <% end %>
      <%= answer.body %>
    </div>
    <div class="answer_date">
      <%= answer.created_at %>
    </div>

    <div class="answer_likes">
      <%= render "answers/likes", answer: answer %>
    </div>

    <% if answer.files.attached? %>
      <div>
        <% answer.files.each do |file| %>
          <p id=<%="file_#{file.id}"%>>
            <%= link_to file.filename.to_s, url_for(file) %>
            <% if answer.author == current_user %>
              <%= link_to image_tag('trash-can-solid.svg', size: 12), delete_file_question_answer_path(question_id: answer.question, id: answer, file_id: file), method: :delete, remote: true %>
            <% end %>
          </p>
        <% end %>
      </div>
    <% end %>
    <% if answer.links.any? %>
      <div>
        Links:
        <% answer.links.each do |link| %>
          <p id=<%="link_#{link.id}" %>>
            <%= link_to link.name, link.url %>
            <% if answer.author == current_user %>
              <%= link_to image_tag('trash-can-solid.svg', size: 12), link_path(link), method: :delete, remote: true %>
              <% end %>
          </p>
        <% end %>
      </div>
    <% end %>
  <div class='answer_buttons'>
    <% if answer.author == current_user %>
      <%= button_to "Edit", edit_answer_path(answer), data: { answer_id: answer.id }, style: 'display:inline-block;', class: "editBtn", method: :get, remote: true %> 
      <%= button_to "Delete", answer_path(answer), form: {style: 'display:inline-block;'}, method: :delete, remote: true %>
    <% end %>
  </div>
</article>
