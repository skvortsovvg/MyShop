answers_list = document.querySelector(".answers");

<% if @answer.errors.any? %>
  answers_list.insertAdjacentHTML(
    "beforebegin",
    "<%= (j render 'shared/errors', object: @answer) %>"
  );
  setTimeout(function () {
    document.querySelector(".errors").remove();
  }, 2000);
<% else %>
  answers_list.insertAdjacentHTML('beforeend', "<%= (j render @answer) %>");
  document.getElementById("answer_body").value = "";
  document.getElementById("answer_files").value = "";
<% end %>