<style type="text/css">
  * {
     box-sizing: border-box;
}

.question {
    width:  50%;
   height:auto;
   padding:10px;
   margin-bottom: 10px;
}

.body {
   padding:10px;
   border:1px solid black;
}

.links {
    width: 100%;
    margin-right: 15px;
    text-align: right;
}

.links a {
  display: inline-block;
  margin: 5px;
}

.button_to {
  display: inline-block;
  border: none;
}

</style>

<h1>Questions</h1>

<% if can?(:create, Question)  %> 
  <%= link_to "New", new_question_path  %>
<% end  %> 

<section id="questions">
  <% cache do %>
    <%= render partial: "question_card", collection: @questions, as: :question %>
  <% end %>
</section>

<script type="module">
  import { SubscribeQuestions } from "channels"
  SubscribeQuestions();
</script>
