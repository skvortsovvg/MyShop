<h1>New Question</h1>

<%= form_with model: @question do |form| %>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :body %><br>
    <%= form.text_area :body, cols: 100, rows: 5 %>
  </div>
  <p>
    <%= form.submit 'Create' %>
  </p>
<% end %>
