<h1>New Question</h1>
<%= render 'shared/errors', object: @question %>
<%= form_with model: @question, local: true do |form| %>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </div>
  <div>
    <%= form.label :body %><br>
    <%= form.text_area :body, cols: 100, rows: 5 %>
  </div>
  <div>
    <%= form.label :files %><br>
    <%= form.file_field :files, multiple: true, direct_upload: true %>
  </div>
  <div>
    Regard for the best answer:
    <%= form.fields_for :regard do |regard| %><br>
      <div>
        <%= regard.label :name, "Regard title" %><br>
        <%= regard.text_field :name %>
      </div>
      <div>
        <%= regard.label :image, "Image URL" %><br>
        <%= regard.text_field :image %>
      </div>
    <% end %>
  </div>
  <div>
    Links:
    <%= form.fields_for :links do |link| %><br>
      <div>
        <%= link.label :name, "Link name" %><br>
        <%= link.text_field :name %>
      </div>
      <div>
        <%= link.label :url, "Source URL" %><br>
        <%= link.text_field :url %>
      </div>
    <% end %>
  </div>
  <p>
    <%= form.submit 'Create' %>
  </p>
<% end %>
