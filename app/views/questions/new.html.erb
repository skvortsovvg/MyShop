<h1>New Question</h1>
<%= render 'shared/errors', object: @question %>
<%= form_with model: @question, local: true do |form| %>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :body %><br>
    <%= form.text_area :body, cols: 100, rows: 5 %>
  </div>
  <div>
    <%= form.label :files %><br>
    <%= form.file_field :files, multiple: true %>
  </div>
  <p>
    <%= form.submit 'Create' %>
  </p>
<% end %>
